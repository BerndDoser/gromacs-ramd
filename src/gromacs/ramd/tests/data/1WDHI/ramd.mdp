integrator               = md
dt                       = 0.002
nsteps                   = 500000

nstlog                   = 1000
nstenergy                = 1000
nstxout-compressed       = 1000

continuation             = yes
constraints              = all-bonds
constraint-algorithm     = lincs

cutoff-scheme            = Verlet

coulombtype              = PME
rcoulomb                 = 1.0

vdwtype                  = Cut-off
rvdw                     = 1.0
DispCorr                 = EnerPres

tcoupl                   = V-rescale
tc-grps                  = Protein  INH    SOL    Na+
tau-t                    = 0.1      0.1    0.1    0.1
ref-t                    = 300      300    300    300

pcoupl                   = Parrinello-Rahman
tau-p                    = 2.0
compressibility          = 4.5e-5
ref-p                    = 1.0

ramd                     = yes
ramd-seed                = 9876
ramd-force               = 1000          ; kJ/mol/nm
ramd-eval-freq           = 100
ramd-r-min-dist          = 0.1           ; nm
ramd-force-out-freq      = 1000
ramd-max-dist            = 10.0          ; nm
ramd-receptor            = Protein
ramd-ligand              = INH
